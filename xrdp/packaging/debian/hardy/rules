DEB_DH_MAKESHLIBS_ARGS_xrdp-sound := --noscripts
DEB_UPDATE_RCD_PARAMS_xrdp := "defaults 90 10"

binary-install/xrdp:: DEB_DH_INSTALLINIT_ARGS := --onlyscripts
